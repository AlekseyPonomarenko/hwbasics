<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/text_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/top_margin_text_result"
        android:layout_marginTop="@dimen/top_margin_text_result"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_result"
        tools:text="0.7777777777" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.4"
        android:contentDescription="@string/background"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/ic_back" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="20dp"
        app:columnCount="4"
        app:useDefaultMargins="true">


        <Button

            android:id="@+id/key_7"
            style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_keys"
            android:text="@string/_7"
            android:textColor="@color/text_color"
            android:textSize="@dimen/key_size" />

        <Button

            android:id="@+id/key_8"
            style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_keys"
            android:text="@string/_8"
            android:textColor="@color/text_color"
            android:textSize="@dimen/key_size" />


        <Button
            android:id="@+id/key_9"
            style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_keys"
            android:text="@string/_9"
            android:textColor="@color/text_color"
            android:textSize="@dimen/key_size" />


        <Button
            android:id="@+id/key_mult"
            style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_keys"
            android:text="@string/_multiply"
            android:textColor="@color/accent"

            android:textSize="@dimen/key_size" />


        <Button

            android:id="@+id/key_4"
            style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_keys"
            android:text="@string/_4"
            android:textColor="@color/text_color"
            android:textSize="@dimen/key_size" />

        <Button

            android:id="@+id/key_5"
            style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_keys"
            android:text="@string/_5"
            android:textColor="@color/text_color"
            android:textSize="@dimen/key_size" />


        <Button
            android:id="@+id/key_6"
            style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_keys"
            android:text="@string/_6"
            android:textColor="@color/text_color"
            android:textSize="@dimen/key_size" />

        <Button
            android:id="@+id/key_minus"
            style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_minus"
            android:textColor="@color/accent"
            android:textSize="@dimen/key_size" />


        <Button

            android:id="@+id/key_1"
            style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_keys"
            android:text="@string/_1"
            android:textColor="@color/text_color"
            android:textSize="@dimen/key_size" />

        <Button

            android:id="@+id/key_2"
            style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_keys"
            android:text="@string/_2"
            android:textColor="@color/text_color"
            android:textSize="@dimen/key_size" />


        <Button
            android:id="@+id/key_3"
            style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_keys"
            android:text="@string/_3"
            android:textColor="@color/text_color"
            android:textSize="@dimen/key_size" />

        <Button
            android:id="@+id/key_plus"
            style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_keys"
            android:text="@string/_plus"
            android:textColor="@color/accent"
            android:textSize="@dimen/key_size" />

        <Button

            android:id="@+id/key_0"
            style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_keys"
            android:text="@string/_0"
            android:textColor="@color/text_color"
            android:textSize="@dimen/key_size" />

        <Button
            android:id="@+id/key_dot"
            style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_keys"
            android:text="@string/_dot"
            android:textColor="@color/text_color"
            android:textSize="@dimen/key_size" />

        <Button
            android:id="@+id/key_div"
            style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_keys"
            android:text="@string/_divider"
            android:textColor="@color/accent"
            android:textSize="@dimen/key_size" />


        <Button
            style="@style/Widget.Material3.Button.TextButton.Dialog.Flush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_keys"
            android:backgroundTint="@color/accent"
            android:text="@string/_equals"
            android:textColor="@color/white"
            android:textSize="@dimen/key_size" />


    </androidx.gridlayout.widget.GridLayout>

</FrameLayout>