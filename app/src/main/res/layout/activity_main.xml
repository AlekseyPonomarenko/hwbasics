<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.CalculatorActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.4"
        android:contentDescription="@string/background"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/ic_back" />

    <Button
        android:id="@+id/theme"
        style="@style/CalcButton.OperationButton"
        android:backgroundTint="@color/red"
        android:text="@string/name_change_theme"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/result"
        tools:text="0.7777777777"
        style="@style/Tablo"
        />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="20dp"
        app:columnCount="4"
        app:useDefaultMargins="true">

        <Button
            android:id="@+id/key_7"
            style="@style/CalcButton"
            android:text="@string/_7" />

        <Button
            android:id="@+id/key_8"
            style="@style/CalcButton"
            android:text="@string/_8" />

        <Button
            android:id="@+id/key_9"
            style="@style/CalcButton"
            android:text="@string/_9" />

        <Button
            android:id="@+id/key_mult"
            style="@style/CalcButton.OperationButton"
            android:text="@string/_multiply" />

        <Button
            android:id="@+id/key_4"
            style="@style/CalcButton"
            android:text="@string/_4" />

        <Button
            android:id="@+id/key_5"
            style="@style/CalcButton"
            android:text="@string/_5" />

        <Button
            android:id="@+id/key_6"
            style="@style/CalcButton"
            android:text="@string/_6" />

        <Button
            android:id="@+id/key_minus"
            style="@style/CalcButton.OperationButton"
            android:text="@string/_minus" />

        <Button
            android:id="@+id/key_1"
            style="@style/CalcButton"
            android:text="@string/_1" />

        <Button
            android:id="@+id/key_2"
            style="@style/CalcButton"
            android:text="@string/_2" />

        <Button
            android:id="@+id/key_3"
            style="@style/CalcButton"
            android:text="@string/_3" />

        <Button
            android:id="@+id/key_plus"
            style="@style/CalcButton.OperationButton"
            android:text="@string/_plus" />

        <Button
            android:id="@+id/key_0"
            style="@style/CalcButton"
            android:text="@string/_0" />

        <Button
            android:id="@+id/key_dot"
            style="@style/CalcButton"
            android:text="@string/_dot" />

        <Button
            android:id="@+id/key_div"
            style="@style/CalcButton.OperationButton"
            android:text="@string/_divider" />

        <Button
            style="@style/CalcButton.OperationButton"
            android:backgroundTint="@color/red"
            android:text="@string/_equals"
            android:textColor="@color/white" />
    </androidx.gridlayout.widget.GridLayout>



</FrameLayout>